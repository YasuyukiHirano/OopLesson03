<Window x:Class="SampleAppllication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleAppllication"
        mc:Ignorable="d"
        Title="Hello world!" Width="500" Height="350" FontSize="14">
    <DockPanel Margin="4">
        <TextBox DockPanel.Dock="Top"
                 Text="ウィンドウの上に張り付くテキストボックス"
                 TextWrapping="Wrap" Margin="4" Padding="2"/>
        <TextBox DockPanel.Dock="Bottom"
                 Text="ウィンドウの下に張り付くテキストボックス"
                 TextWrapping="Wrap" Margin="4" Padding="2"/>
        <Button Content="多言語対応環境" Margin="4" Padding="8"/>
        <TextBox Text="真ん中の領域いっぱいに広がるテキストボックス"                
                 TextWrapping="Wrap" Margin="4" Padding="2"/>
    </DockPanel>
</Window>
